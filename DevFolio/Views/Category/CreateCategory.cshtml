@model DevFolio.Models.TblCategory

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Kategori Girişi</h2>


@using (Html.BeginForm("CreateCategory", "Category", new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Kategori Adı</label>
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName,"", new {@style="color:red"})
    </div>

    <div class="form-group">
        <button class="btn btn-info">Kategoriyi Kaydet</button>
    </div>
}



