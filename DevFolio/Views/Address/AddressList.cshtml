@model List<DevFolio.Models.TblAddress>

@{
    ViewBag.Title = "AddressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Sayfası</h2>

<table class="table table-bordered">

    <tr align="center" class="table table-secondary">
        <th>#</th>
        <th>Açıklama</th>
        <th>Konum</th>
        <th>Telefon Numarası</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdresID</td>
            <td>@item.Description</td>
            <td>@item.Location</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Email</td>
            <td><a href="/Address/DeleteAddress/@item.AdresID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Address/UpdateAddress/@item.AdresID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
@if (ViewBag.num1Addr < 1)
{
    <a href="/Address/CreateAddress" class="btn btn-info">Yeni Adres Girişi</a>
}


