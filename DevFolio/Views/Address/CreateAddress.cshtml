@model DevFolio.Models.TblAddress
@{
    ViewBag.Title = "CreateAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Adres Girişi</h2>

@if (ViewBag.num2Addr > 0)
{
    <div style="width:fit-content" class="alert alert-danger">Sadece 1 adet adres girilebilir!</div>
    <a href="/Address/AddressList" class="btn btn-info">Geri Dön</a>
}

else
{
<form method="post">

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows=5})
    <br />

    <label>Konum</label>
    @Html.TextBoxFor(x => x.Location, new { @class = "form-control" })
    <br />

    <label>Telefon Numarası</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @required="", pattern="\\+90[0-9]{10}", title="Telefon numarası +90 ile başlamalı ve toplamda 12 rakamdan oluşmalıdır." })
    <small>Telefon numarasını +90 ile başlayarak 12 rakamlı olarak giriniz.</small>
    <br />

    <label>Email</label>
    <div class="form-group">
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <button class="btn btn-info">Adresi Kaydet</button>
</form>
}
