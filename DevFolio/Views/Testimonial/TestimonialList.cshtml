@model List<DevFolio.Models.TblTestimonial>

@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslar Sayfası</h2>

<table class="table table-bordered">

    <tr align="center" class="table table-secondary">

        <th>#</th>
        <th>Referans Adı</th>
        <th>Referans Yorumu</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach(var item in Model)
    {
        string state = "";
        string value = "";

        if(item.Status==true)
        {
            state = "bg-success";
            value = "Aktif";
        }

        else
        {
            state = "bg-danger";
            value = "Pasif";
        }

                <tr>

                    <td>@item.TestimonialID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Description</td>
                    <td><a href="/Testimonial/StatusChangeTestimonial/@item.TestimonialID"><span class="badge @state" style="font-size:13px; color:lemonchiffon">@value</span></a></td>
                    <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
</table>

<a href="/Testimonial/CreateTestimonial/" class="btn btn-info">Yeni Referans Yorumu</a>