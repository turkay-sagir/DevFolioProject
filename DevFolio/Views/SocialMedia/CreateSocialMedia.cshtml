@model DevFolio.Models.TblSocialMedia
@{
    ViewBag.Title = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    var imageList = (List<SelectListItem>)ViewBag.imageList;
}

<h2>Yeni Sosyal Medya Girişi</h2>


<form method="post">
    <label>Platform Adı</label>
    @Html.TextBoxFor(x => x.PlatformName, new { @class = "form-control" })
    <br />

    <label>Simge Url</label>
    @Html.DropDownListFor(x => x.IconUrl, (List<SelectListItem>)imageList, new { @class = "form-control" })
    <br />

    <label>Platform Url</label>
    @Html.TextBoxFor(x => x.RedirectUrl, new { @class = "form-control", @required = "", pattern = "www\\.[a-z]+\\.com" })
    <small><i>www.example.com</i> formatında giriş yapınız.</small>
    <br />
    <br />

    <button class="btn btn-info">Sosyal Medyayı Kaydet</button>

</form>