
@model List<DevFolio.Models.TblSocialMedia>

@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya Sayfası</h2>

<table class="table table-bordered">

    <tr class="table table-secondary">
        <th>#</th>
        <th>Platform Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach(var item in Model)
    {

        string state = "";
        string value = "";

        if(item.Status==true)
        {

            state = "bg-success";
            value = "Aktif";
        }

        else
        {
            state = "bg-danger";
            value = "Pasif";
        }

        <tr>
            <td>@item.SocialMediaID</td>
            <td>@item.PlatformName</td>
            <td><a href="/SocialMedia/StatusChangeSocialMedia/@item.SocialMediaID"><span class="badge @state" style="font-size:13px; color:lemonchiffon">@value</span></a></td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Sil</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-success">Güncelle</a></td>
        </tr>
     }

</table>
<a href="/SocialMedia/CreateSocialMedia" class="btn btn-info">Yeni Sosyal Medya Girişi</a>